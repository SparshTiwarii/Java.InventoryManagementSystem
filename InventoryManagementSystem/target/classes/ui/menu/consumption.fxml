<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="587.0" prefWidth="732.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.main.controller.menu.ConsumptionController">
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="5.0">
            <Button fx:id="buttonConsumptionRefreshTable" onAction="#OnPress_Button_RefreshConsumptionTable"
                    mnemonicParsing="false" text="Обновить таблицу"/>
            <Button fx:id="buttonExportToExcel" mnemonicParsing="false" text="Экспорт Excel"/>
        </HBox>
        <TableView fx:id="tableConsumptionView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tableConsumptionColumnId" prefWidth="75.0" text="Id"/>
                <TableColumn fx:id="tableConsumptionColumnProductName" prefWidth="75.0" text="Product Name"/>
                <TableColumn fx:id="tableConsumptionColumnPrice" prefWidth="75.0" text="Price"/>
                <TableColumn fx:id="tableConsumptionColumnAmount" prefWidth="75.0" text="Amount"/>
                <TableColumn fx:id="tableConsumptionColumnTotalPrice" prefWidth="75.0" text="Total Price"/>
                <TableColumn fx:id="tableConsumptionColumnDate" prefWidth="75.0" text="Date"/>

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
    </VBox>
</AnchorPane>
